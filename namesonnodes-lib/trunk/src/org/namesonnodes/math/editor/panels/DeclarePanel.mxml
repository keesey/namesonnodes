<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/halo"
	xmlns:panels="org.namesonnodes.math.editor.panels.*"
	title="Declarations"
	width="100" height="100" xmlns:elements="org.namesonnodes.math.editor.elements.*">
	<fx:Script>
		<![CDATA[
			import org.namesonnodes.math.editor.elements.*;
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout gap="10" horizontalAlign="center"/>
	</s:layout>
	<panels:ElementButton id="booleanButton">
		<panels:elementFactory>
			<elements:DeclarationFactory
				identifierSource="{identifierInput}"
				identifierProperty="text" type="{Boolean}"/>
		</panels:elementFactory>
	</panels:ElementButton>
	<s:Group width="80">
		<s:layout>
			<s:VerticalLayout/>
		</s:layout>
		<s:SimpleText text="Variable Name:"/>
		<s:TextInput id="identifierInput" text="A" restrict="A-Z" maxChars="255" width="100%"/>
	</s:Group>
</s:Panel>
