<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/halo"
	xmlns:panels="org.namesonnodes.math.editor.panels.*"
	title="Boolean Logic"
	width="100" height="100">
	<fx:Script>
		<![CDATA[
			import org.namesonnodes.math.editor.elements.*;
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" gap="10"/>
	</s:layout>
	<s:HGroup width="80">
		<panels:ElementButton id="trueButton" elementFactory="{new ClassFactory(TrueElement)}"/>
		<panels:ElementButton id="falseButton" elementFactory="{new ClassFactory(FalseElement)}" />
	</s:HGroup>
	<s:HGroup width="80">
		<panels:ElementButton id="andButton" elementFactory="{new ClassFactory(AndElement)}" />
		<panels:ElementButton id="orButton" elementFactory="{new ClassFactory(OrElement)}" />
	</s:HGroup>
	<s:HGroup width="80">
		<panels:ElementButton id="notButton" elementFactory="{new ClassFactory(NotElement)}" />
	</s:HGroup>
</s:Panel>
